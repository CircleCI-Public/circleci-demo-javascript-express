{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": 1
        
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
   "parser": "babel-eslint",
   "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": true
  },
    "extends": "eslint:recommended",
    "comma-dangle": [2, {
      	"arrays": "always-multiline",
      	"objects": "always-multiline",
      	"imports": "always-multiline",
      	"exports": "always-multiline",
      	"functions": "always-multiline"
 
}]
}
