{
    "rules": {
        "indent": [
            0,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-mixed-spaces-and-tabs": 0,
        "no-unused-vars": 1
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
   "parser": "babel-eslint",
   "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": true
  },
    "extends": "eslint:recommended",
    "trailing-comma": [true, {
        "singleline": "never",
         "multiline": {
         "objects": "always",
         "arrays": "always",
         "functions": "never",
         "typeLiterals": "ignore"
  }
}]
}
